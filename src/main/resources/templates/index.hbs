{{#partial "content"}}

    <div class="jumbotron text-center">
        <h1>Sites Management App</h1>
        <p>Keep Track Each site and the Engineer Assigned to Maintain it!</p>
    </div>

    <div class="container">

    <h1 >Engineer's List!</h1>

    <p>Recently Added Engineer:</p>

    {{#if posts}}  <!--if posts exists, then-->
        {{#each posts}} <!--loop-->

        <p>{{content}}</p> <!--show-->
        {{/each}}
    {{else}}
        <p>No Engineer!</p>
    {{/if}}

    <p> Add a new Engineer: </p>

    <form action="/posts/new" method="POST">
        <label for="content">Add Engineer</label>
        <input id="content" name="content" type="text">

        <button type="submit" class="btn btn-default">Add!</button>
    </form>
    </div>

    <div class="container">

        <h1 >Site's List!</h1>

        <p>Recently Added Site:</p>

        {{#if posts}}  <!--if posts exists, then-->
            {{#each posts}} <!--loop-->

                <p>{{content}}</p> <!--show-->
            {{/each}}
        {{else}}
            <p>No Site!</p>
        {{/if}}

        <p> Add a new Site: </p>

        <form action="/posts/new" method="POST">
            <label for="content">Add Site</label>
            <input id="content" name="content" type="text">

            <button type="submit" class="btn btn-default">Add!</button>
        </form>
    </div>



{{/partial}}

{{> layout.hbs}}