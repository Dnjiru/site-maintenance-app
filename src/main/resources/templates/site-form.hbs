{{#partial "content"}}
    {{#if editSite}}
        <h1>Edit this Site!</h1>
        <form action="/sites/{{site.id}}" method="post">
            <br>
            <label for="description">Edit this Site's description</label>
            <input id="description" name="description" type="text" value="{{site.description}}">
            <br>
            <label for="engineerId">Update this Site's Department:</label>
            <select id="engineerId" name="engineerId">
                {{#each engineers}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right Engineer?<a href="/engineers/new">Add a new one first.</a></p>
            <button type="submit" class="btn btn-default">Add!</button>
        </form>
    {{else}}
        <h2>Add a new Site!</h2>
        <form action="/sites" method="post">
            {{#if engineers}}
                <label for="description">Site Description</label>
                <input id="description" name="description" type="text">
                <label for="engineerId">Engineer assigned to  this Site as:</label>
                <select id="engineerId" name="engineerId">
                    {{#each engineers}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right Engineer?<a href="/engineers/new">Add a new one first.</a></p>
            {{else}}
                <h3> You'll need to add a Engineer before you add a Site. <a href="/engineers/new">Add one here.</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-default">Add!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}
