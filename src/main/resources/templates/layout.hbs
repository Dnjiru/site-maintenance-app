    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
<div class="container" style="font-size:1.4rem;">

<div class="jumbotron text-center">
    <h1>Sites Management App</h1>
    <p>Keep Track Each site and the Engineer Assigned to Maintain it!</p>
</div>

<ul class="nav nav-tabs">
    <li role="presentation" class="active"><a href="/">Home</a></li>
    <li role="presentation"><a href="/sites">Add a New Site</a></li>
    <li role="presentation"><a href="/engineers/new">Add a New Engineer </a></li>

    <li role="presentation" class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Engineers List <span class="caret"></span>
        </a>

        <ul class="dropdown-menu">
            {{#if engineers}}
                {{#each engineers}}
                    <li><a href="/engineers/{{id}}">{{name}}</a></li>
                {{/each}}
                <li><a href="/engineers/new">Add an Engineer</a></li>

            {{else}}
                <li><a href="/engineers/new">Add an Engineer</a></li>
            {{/if}}
        </ul>
    </li>

    <li role="presentation" class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Sites List <span class="caret"></span>
        </a>

        <ul class="dropdown-menu">
            {{#if sites}}
                {{#each sites}}
                    <li><a href="/sites/{{id}}">{{name}}</a></li>
                {{/each}}
                <li><a href="/sites">Add a Site</a></li>

            {{else}}
                <li><a href="/sites/new">Add a Site</a></li>
            {{/if}}
        </ul>
    </li>
</ul>


    <!--begin main template-->
    <div class="page-header">
        <img src="/images/ncity.jpg" width="99%" alt="Photo of a BTS" style="border-radius:15px;">
        <h1>Sites Manager App. <small>Track each site and the engineer maintaining it.</small></h1>
    </div>

    <div class="col-md-12">
        {{#block "content"}}
        {{/block}}

    </div>

<!--end main template-->

{{#block "footer"}}
    <footer class="footer">
        <div class="container">
            <div class="col-md-4">
                <p class="text-muted">
                    <a href="/categories/delete">Delete all Engineer & Sites</a><br>

                </p>
            </div>
            <div class="col-md-4">
                <p class="text-muted">

                    <a href="/tasks/delete">Delete all Sites</a>
                </p>
            </div>

            <div class="col-md-4">
                <p class="text-muted">

                    <a href="/tasks/delete">Delete all Engineers</a>
                </p>
            </div>

        </div>
    </footer>
</div>
