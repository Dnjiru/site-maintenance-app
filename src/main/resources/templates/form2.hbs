{{#partial "title"}}
    Assign Engineer to sites
{{/partial}}

<!--form.hbs-->
{{#partial "content"}}
    <h1> Fill in Engieers name and site allocated</h1>

    <form action = '/engineer.hbs'>
        <div class="form-group">
            <label for="engineer">Engineer's Name</label>
            <input id="engineer" name="engineer" class="form-control" type="text" >
        </div>

        <div class="form-group">
            <label for="ek">Engineer's EK No.</label>
            <input id="ek" name="ek" class="form-control" type="number" >
        </div>

        <div class="form-group">
            <label for="sites">Site Name</label>
            <input id="sites" name="sites" class="form-control" type="text" >
        </div>

        <button type="submit" class="btn btn-primary">Add!</button>


    </form>

{{/partial}}

{{>layout.hbs}}